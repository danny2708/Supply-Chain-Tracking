generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int     @id @default(autoincrement())
  productId String  @unique
  name      String?
  metaCID   String?
  createdAt DateTime @default(now())
  stages    ProductStage[]
}

model ProductStage {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [productId])
  productId String
  actor     String
  description String?
  metaCID   String?
  txHash    String?
  createdAt DateTime @default(now())
}
